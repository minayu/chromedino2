<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jp.ac.jec.cm0130.genju.EnemyActivity"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#3c3f41">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:id="@+id/iButtonHome"
            android:layout_weight="1"
            android:src="@drawable/menu_home"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="2dp"
            android:background="#000000"
            android:scaleType="fitCenter" />
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:id="@+id/iButtonItem"
            android:layout_weight="1"
            android:src="@drawable/menu_item"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="#000000"
            android:scaleType="fitCenter" />
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:id="@+id/iButtonDungeon"
            android:layout_weight="1"
            android:src="@drawable/menu_dungeon"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="#000000"
            android:scaleType="fitCenter" />
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:id="@+id/iButtonShop"
            android:layout_weight="1"
            android:src="@drawable/menu_shop"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="#000000"
            android:scaleType="fitCenter" />
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:id="@+id/iButtonEnemy"
            android:layout_weight="1"
            android:src="@drawable/menu_enemy"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="4dp"
            android:background="#000000"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:weightSum="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:src="@drawable/weapon"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="依代討伐"
            android:id="@+id/textView9"
            android:background="@drawable/kadomaru_10dp"
            android:textSize="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:gravity="center_horizontal"
            android:layout_weight="0.74" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView5"
            android:src="@drawable/shield"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.13" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ededef"
        android:layout_marginTop="4dp"
        android:gravity="center_horizontal"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="討伐を受注する"
            android:id="@+id/btnOrder"
            android:background="#00000000"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ededef"
        android:layout_marginBottom="6dp"
        android:gravity="center_horizontal"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="討伐に参加する"
            android:id="@+id/button4"
            android:background="#00000000"
            android:textColor="#000000" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:weightSum="1"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="187dp"
            android:id="@+id/imageView6"
            android:layout_weight="0.18" />
    </LinearLayout>

</LinearLayout>
